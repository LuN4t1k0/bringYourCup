<script>
  $(function() {

    function roundTenths(float) {
      return Math.floor(float)
    }

    $("#calcular").click(function() {
      var group_size = $("#group-size").val()
      var weekly_breaks = $("#coffee-breaks").val()
      var intRegex = /^\d+$/;

      if (intRegex.test(weekly_breaks) && 
        intRegex.test(group_size)) {
          var weekly_breaks_int = parseInt(weekly_breaks);
          var group_size_int = parseInt(group_size);
          var vasos_menusal_persona = weekly_breaks_int * 4.35;
          var vasos_anual_persona = weekly_breaks_int * 52.14;
          var vasos_anual_grupo = vasos_anual_persona * group_size_int;
          $("#vasos-mensual-persona").html(roundTenths(vasos_menusal_persona));
          $("#vasos-anual-persona").html(roundTenths(vasos_anual_persona));
          $("#vasos-anual-grupo").html(roundTenths(vasos_anual_grupo));
          $("#group-size-below").html(group_size_int);
        }
    });
  });
</script>
