
<div class="container">

      <div class="row row-offcanvas row-offcanvas-right">

        <div class="col-xs-12 col-sm-9">
          <p class="pull-right visible-xs">
            <button data-toggle="offcanvas" class="btn btn-primary btn-xs" type="button">Más videos  »</button>
          </p>
           
          <div class="row">
            <div class="col-sm-6 col-lg-9">
            <!-- TITULO DEL VIDEO-->
              <h2> <%= @pin.title %> - <%= notice %></h2>
                <p>Publicado el <%= @pin.created_at %>  </p>                
                <p>
                 
				<iframe width="640" height="360" src="//www.youtube.com/embed/<%= @pin.photo %>" frameborder="0" allowfullscreen></iframe>
                 <!-- <object width="640" height="480"class="videoytb"><param name="movie" value="//www.youtube.com/v/nZhZQx-5LrQ?version=3&amp;hl=es_ES&amp;rel=0"></param><param name="allowFullScreen" value="true"></param><param name="allowscriptaccess" value="always"></param><embed src="//www.youtube.com/v/nZhZQx-5LrQ?version=3&amp;hl=es_ES&amp;rel=0" type="application/x-shockwave-flash" width="640" height="480" allowscriptaccess="always" allowfullscreen="true"></embed></object> -->
                <!-- CARGO EL IFFRAME-->
                
 
                </p>

                <p class="well well-sm">
                <!-- DESCRIPCION DEL VIDEO-->
                  <%= @pin.description %>
                </p>

                <p> <span class="label label-info  ">Música</span> 

                <%  if @pin.destacado == 'si' %>
                <span class="label label-success  ">Destacado</span>
                <% else %>
                <span class="label label-warning ">No Destacado</span>
                <% end%>

                </p>
               

 
                 

 
            <p class="pull-right"><%= link_to ' Volver ', pins_path, class:"btn btn-default btn-sm" %> </p>

            <p class="pull-left">
            
            <%= link_to ' Editar ', edit_pin_path(@pin), class:"btn btn-default btn-sm" %> </p>
            </div><!--/span-->
 

              
            
          </div><!--/row-->
        </div><!--/span-->

        <div role="navigation" id="sidebar" class="col-xs-6 col-sm-3 sidebar-offcanvas">
          <div class="list-group">

           <% @pins.each do |pin| %>
            <a class="list-group-item" href="<%= pin.id %>">
 
            <%= pin.title %>

             </a>  
          <% end %>

           </div>
        </div><!--/span-->
      </div><!--/row-->

      <hr>

      <footer>
        <p>&copy; Company 2014</p>
      </footer>

    </div>

