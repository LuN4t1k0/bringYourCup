<h1>Videos de Conciertos Comentados</h1>

<div class="container">
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= pin.title %></td>
        <td><%= image_tag(pin.photo, class:"img-responsive") %></td>
        <td><%= link_to ' Ver ', pin %></td>
        <td><%= link_to ' Editar ', edit_pin_path(pin) %></td>
        <td><%= link_to ' Borrar ', pin, method: :delete, data: { confirm: 'Estas Seguro de borrar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pin', new_pin_path %>

</div>